[program:suspender]

command=/edx/bin/python.edxapp {{ edxapp_code_dir }}/manage.py lms --settings={{ EDXAPP_SETTINGS }} suspender

user={{ common_web_user }}
directory={{ edxapp_code_dir }}
environment=LANG={{ EDXAPP_LANG }},DJANGO_SETTINGS_MODULE={{ EDXAPP_LMS_ENV }},SERVICE_VARIANT="lms",PATH="{{ edxapp_deploy_path }}"
stdout_logfile={{ supervisor_log_dir }}/%(program_name)s-stdout.log
stderr_logfile={{ supervisor_log_dir }}/%(program_name)s-stderr.log
killasgroup=true
stopasgroup=true
